apiVersion: v1
kind: Namespace
metadata:
  name: hello-world
  labels:
    app: hello-world-go 
    environment: <%= environment %>
---
apiVersion: v1
kind: Service
metadata:
  name: hello-world
  namespace: hello-world
  labels:
  app: hello-world-go-shipit
  environment: <%= environment %>
spec:
  clusterIP: None
  ports:
  - port: 8080 
    name: endpoint
  selector:
    app: hello-world-go-shipit
    environment: <%= environment %>
---
apiVersion: apps/v1 
kind: Deployment
metadata: 
  name: hello-world-shipit
  labels: 
    app: hello-world-go-shipit
    environment: <%= environment %>
spec:
  replicas: 1
  selector:
    matchLabels:
      app: hello-world-go-shipit
      environment: <%= environment %>
  template:
    metadata:
      name: hello-world
      labels:
        app: hello-world-go 
        environment: <%= environment %>
    spec:
      containers:
        - image: <%= image %>
          imagePullPolicy: Always 
          name: hello-world-go
          command: ["/server"]
          envFrom:
          - secretRef:
              name: hello-world
          ports:
            - containerPort: 8080       
          livenessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 30
            timeoutSeconds: 10
          securityContext:
            privileged: true
